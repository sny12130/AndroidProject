<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 預設時 -->
    <item android:color="@android:color/black">
        <shape android:shape="oval"  >
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <size
                 android:width="10dp"
                android:height="10dp">
            </size>
            <gradient
                android:type="radial"
                android:gradientRadius="40dp"
                android:startColor="#f2efef"
                android:endColor="#7c7b7c"  />
        </shape>
    </item>

</selector>