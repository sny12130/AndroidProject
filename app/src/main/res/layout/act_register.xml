<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    >

    <RelativeLayout
        android:layout_width="361dp"
        android:layout_height="523dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="22dp">

        <TextView
            android:layout_width="148dp"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="建立帳號"
            android:textColor="@color/colornotBlack"
            android:textSize="20dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="75dp"
            android:gravity="center"
            android:text="帳號:"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="80dp" />

        <EditText
            android:id="@+id/tb帳號"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="102dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="13dp"
            android:background="@color/colorWhite"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="80dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="348dp"
            android:gravity="center"
            android:text="密碼:"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="80dp" />

        <EditText
            android:id="@+id/tb密碼"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tb帳號"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="11dp"
            android:background="@color/colorWhite"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="173dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="27dp"
            android:layout_marginBottom="290dp"
            android:gravity="center"
            android:text="姓名:"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="267dp" />

        <EditText
            android:id="@+id/tb姓名"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tb密碼"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorWhite"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="173dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="229dp"
            android:gravity="center"
            android:text="信箱:"
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/tb信箱"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tb姓名"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorWhite"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="173dp" />

        <Button
            android:id="@+id/btn註冊"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="150dp"
            android:background="@drawable/ui_select_black"
            android:text="註冊"
            android:textColor="@color/colorOrange"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="454dp" />

        <Button
            android:id="@+id/btn清空欄位"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/tb信箱"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="150dp"
            android:layout_toEndOf="@+id/btn註冊"
            android:background="@drawable/ui_select_black"
            android:text="清空欄位"
            android:textColor="@color/colorOrange"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="454dp" />

        <Button
            android:id="@+id/btn返回"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/tb信箱"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="148dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="150dp"
            android:layout_toEndOf="@+id/btn註冊"
            android:background="@drawable/ui_select_black"
            android:text="返回"
            android:textColor="@color/colorOrange"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="454dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>