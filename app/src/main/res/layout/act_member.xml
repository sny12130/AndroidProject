<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/MyPortfolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorWhite"
                android:text="MyPorfolio"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/img使用者大頭貼"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="52dp" />


            <TextView
                android:id="@+id/lbl使用者名稱"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/img使用者大頭貼"
                android:layout_below="@+id/img使用者大頭貼"
                android:text="AboutMe"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/lbl使用者帳號"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/lbl使用者名稱"
                android:layout_marginBottom="92dp"
                android:text="使用者帳號"
                android:textColor="@color/colorWhite"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/lbl伊媚兒"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/img使用者大頭貼"
                android:layout_marginBottom="65dp"
                android:text="伊媚兒"
                android:textColor="@color/colorWhite"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn登出"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lbl伊媚兒"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:background="#00000000"
                android:text="Loginout"
                android:textColor="@color/colorblue"
                android:textSize="15dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <GridView
                android:id="@+id/grid會員相片"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnWidth="30dp"
                android:horizontalSpacing="1dp"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="2dp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>